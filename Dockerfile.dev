# Development Dockerfile for Backend
FROM node:20-alpine

WORKDIR /app

# Install nodemon for hot reload
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start with nodemon for hot reload
CMD ["nodemon", "--watch", "src", "src/index.js"]
